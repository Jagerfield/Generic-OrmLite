<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textview_dashboard_style_one" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">6.2pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="textview_dashboard_style_two" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/menublue</item>
        <item name="android:tag">dashboard_reading</item>
    </style>

    <style name="textview_recycler_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/blue_link</item>
    </style>

    <style name="button_dashboard_style" parent="@android:style/Widget.Button">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">12.5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/greendark</item>
    </style>

</resources>
